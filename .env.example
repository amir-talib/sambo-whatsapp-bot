# WhatsApp Bot Environment Variables
# Copy this to .env and fill in the values

PORT=3001

# WhatsApp Cloud API
WA_PHONE_NUMBER_ID=
WA_VERIFY_TOKEN=your_webhook_verify_token
WA_ACCESS_TOKEN=

# Vercel KV (auto-injected on Vercel, set manually for local dev)
# Create a KV database in your Vercel project dashboard
# These are injected automatically when you link Vercel KV
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Google AI (Gemini)
GOOGLE_API_KEY=

# Cloudinary (same as root .env)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Database (same as root .env)
DATABASE_URL=
